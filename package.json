{
  "name": "@opensaas-clubhouse/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "An example setup of how to do a monorepo, used in our monorepo 'getting started' guide",
  "repository": "https://github.com/OpenSaasAU/clubhouse",
  "license": "MIT",
  "author": "Josh Calder <josh@opensaas.com.au>",
  "workspaces": [
    "packages/*",
    "services/*",
    "apps/*",
    "backend",
    "website"
  ],
  "scripts": {
    "build": "preconstruct build",
    "build:backend": "manypkg run backend build",
    "clean": "manypkg exec rm -rf node_modules && manypkg exec rm -rf dist && rm -rf node_modules",
    "dev:backend": "manypkg run backend dev",
    "dev:frontend": "manypkg run frontend dev",
    "postinstall": "preconstruct dev && manypkg check",
    "lint": "yarn eslint .",
    "release": "yarn build && changeset publish",
    "start": "echo figure out how to start both services simultaneously here",
    "start:backend": "manypkg run backend start",
    "start:next": "yarn manypkg run next-app start",
    "test": "jest"
  },
  "dependencies": {
    "@babel/core": "7.16.5",
    "@babel/eslint-parser": "7.16.5",
    "@babel/plugin-transform-runtime": "7.16.5",
    "@babel/preset-env": "7.16.5",
    "@babel/preset-react": "7.16.5",
    "@changesets/cli": "2.19.0",
    "@manypkg/cli": "0.19.1",
    "@preconstruct/cli": "2.1.5",
    "babel-jest": "27.5.1",
    "eslint": "7.32.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.5.1",
    "prettier": "2.4.1"
  },
  "preconstruct": {
    "packages": [
      "packages/*",
      "services/*"
    ]
  },
  "devDependencies": {
    "turbo": "^1.1.5"
  }
}
